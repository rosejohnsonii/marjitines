<body>

    <div class="poster-container" id="posterContainer">
        <!-- Floating Hearts Background -->
        <div class="heart-bg" style="left: 10%; font-size: 3rem; animation-delay: 0s;">‚ù§</div>
        <div class="heart-bg" style="left: 30%; font-size: 2rem; animation-delay: 2s;">üíñ</div>
        <div class="heart-bg" style="left: 70%; font-size: 4rem; animation-delay: 4s;">üíï</div>
        <div class="heart-bg" style="left: 90%; font-size: 2.5rem; animation-delay: 1s;">üíó</div>
        <div class="heart-bg" style="left: 50%; font-size: 3rem; animation-delay: 3s;">üíò</div>

        <div class="overlay"></div>

        <div class="card" id="mainCard">
            <div class="bear-icon">üêª</div>
            <h1>Marji...</h1>
            <div class="sub-text">I have a question for you!</div>
            
            <h2 style="font-size: 2.2rem; color: var(--deep-red); margin-bottom: 20px;">Will you be my Valentine?</h2>
            
            <div class="buttons-container">
                <button class="btn btn-yes" onclick="sayYes()">Yes! ‚ù§Ô∏è</button>
                <button class="btn btn-no" id="noBtn">No üíî</button>
            </div>
        </div>

        <!-- Success Message -->
        <div class="success-overlay" id="successMsg">
            <div class="success-icon">üíñ</div>
            <h1>Yay!</h1>
            <p>Thank you for being mine! <br> I love you so much! ‚ù§Ô∏è</p>
            <i class="material-icons" style="font-size: 4rem; color: var(--deep-red);">favorite</i>
        </div>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const container = document.getElementById('posterContainer');
        const successMsg = document.getElementById('successMsg');
        let moveCount = 0;

        // Function to move the button away
        function moveButton() {
            const containerRect = container.getBoundingClientRect();
            const btnRect = noBtn.getBoundingClientRect();

            // Calculate random positions within the container
            // Use fixed positioning relative to the viewport to ensure it jumps out of the flow
            const maxLeft = containerRect.width - btnRect.width;
            const maxTop = containerRect.height - btnRect.height;

            // Generate random coordinates
            const newLeft = Math.random() * (window.innerWidth - btnRect.width - 40);
            const newTop = Math.random() * (window.innerHeight - btnRect.height - 40);

            // Switch to fixed positioning to allow movement anywhere on the screen
            noBtn.style.position = 'fixed';
            noBtn.style.left = `${newLeft}px`;
            noBtn.style.top = `${newTop}px`;
            noBtn.style.zIndex = 100;
            
            // Make it smaller and harder to catch
            if(moveCount > 5) {
                noBtn.style.transform = `scale(${Math.max(0.5, 1 - moveCount * 0.1)})`;
            }
            
            moveCount++;
            
            // Change text occasionally
            const texts = ["No üíî", "Can't catch me!", "Try clicking Yes!", "Really?", "Please?", "Think again!"];
            noBtn.innerText = texts[Math.min(moveCount, texts.length - 1)];
        }

        // Add event listeners for mouseover and touch
        noBtn.addEventListener('mouseover', moveButton);
        noBtn.addEventListener('touchstart', (e) => {
            e.preventDefault(); // Prevent click on mobile
            moveButton();
        });

        // Success function
        function sayYes() {
            successMsg.classList.add('active');
            createConfetti();
        }

        // Simple confetti generator
        function createConfetti() {
            const colors = ['#ff758c', '#ff7eb3', '#ffc75f', '#f9f871', '#ffffff'];
            for (let i = 0; i < 100; i++) {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti');
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.top = -10 + 'px';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animationDuration = (Math.random() * 3 + 2) + 's';
                confetti.style.opacity = Math.random();
                document.body.appendChild(confetti);
            }
        }
    </script>
</body>
